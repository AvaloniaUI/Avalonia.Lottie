<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Avalonia.Lottie</Product>
    <VersionPrefix>0.10.3</VersionPrefix>
    <Copyright>Copyright 2018 © Ascora GmbH; Copyright 2021 © The AvaloniaUI Project</Copyright>
    <PackageProjectUrl>https://avaloniaui.net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AvaloniaUI/Avalonia.Lottie/</RepositoryUrl>
    <LangVersion>latest</LangVersion>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageDescription>Lottie/Bodymovin renderer and player for Avalonia UI Framework.</PackageDescription>
    <PackageTags>avalonia;avaloniaui;lottie;bodymovin</PackageTags>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="$(AvaloniaVersion)" />
    <PackageReference Include="DotNetZip" Version="1.16.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>